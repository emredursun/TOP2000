@model IEnumerable<Top2000.Models.Song>




    @foreach (var item in Model)
    {
    ViewBag.artiest = item.Artiest.Naam;
    }


    <h1>@ViewBag.songTitel.Titel</h1>

    <div id="chart"></div>

    <script type="text/javascript">

    window.onload = function () {
        var titel   = "@ViewBag.songTitel.Titel",
            artiest = "@ViewBag.artiest";

            var chart = new CanvasJS.Chart("chart", {
                theme: "light2",
                animationEnabled: true,
                title: {
                    text: titel
                },
                subtitles: [
                    { text: artiest }
                ],
                axisY: {
                    reversed: true,
                    valueFormatString: "#####",
                },
                axisX: {
                    valueFormatString: "#####",
                },
                data: [
                {
                    type: "line", //change type to bar, line, area, pie, etc

                        xValueFormatString: "#####",
                        xValueType: "date",
                        dataPoints: @Html.Raw(ViewBag.DataPoints),
                }
                ]
            });

            chart.render();

        };
    </script>

    @foreach (var item in Model)
    {
    <p> @Html.DisplayFor(modelItem => item.Artiest.Naam) </p>
    }
